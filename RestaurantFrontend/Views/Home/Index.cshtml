@{
    ViewData["Title"] = "Home Page";
}

 @*  Welcome Section  *@
<div class="text-center my-4">
    <h1 class="display-4">Welcome to our Restaurant</h1>
    <p class="lead">Experience the best Italian cuisine</p>
</div>

@model List<RestaurantFrontend.Models.DTOs.MenuDTO>

@* Popular Dishes Section *@
<h2 class="mb-4">Popular Dishes</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var dish in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@dish.DishName</h5>
                        <p class="card-text">@dish.Description</p>
                        <h4 class="text-success">@dish.Price.ToString("C")</h4>
                       
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        No popular dishes available at the moment.
    </div>
}
