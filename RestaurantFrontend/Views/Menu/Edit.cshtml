@using RestaurantFrontend.Models.DTOs
@model MenuDTO

<h2>Edit Menu</h2>

<form asp-action="UpdateMenu" method="post">
    <div class="form-group">
        <label asp-for="DishName"></label>
        <input asp-for="DishName" class="form-control" />
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

   
    <input type="hidden" asp-for="MenuId" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>
